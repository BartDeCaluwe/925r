table(style="
    border-collapse: collapse;
")
    thead
        tr
            th(style="
                color: #666;
                background: #f6f6f6;
                text-transform: uppercase;
                border-top: 1px solid #eee;
                border-bottom: 1px solid #eee;
                padding: 5px 10px;
                text-align: left;
            ") Timesheet
            th(style="
                color: #666;
                background: #f6f6f6;
                text-transform: uppercase;
                border-top: 1px solid #eee;
                border-bottom: 1px solid #eee;
                padding: 5px 10px;
                text-align: left;
            ") Status

    tbody
        for timesheet in timesheets
            tr(style="
                background: {% cycle '#ffffff' '#f9f9f9' %};
            ")
                td(style="
                    border-bottom: 1px solid #eee;
                    padding: 8px;
                    vertical-align: top;
                ") {{ timesheet }}
                td(style="
                    border-bottom: 1px solid #eee;
                    padding: 8px;
                    vertical-align: top;
                ") {{ timesheet.status }}
