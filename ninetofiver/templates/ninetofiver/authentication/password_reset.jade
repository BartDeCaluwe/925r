extends ninetofiver/authentication/page.jade
- load crispy_forms_tags

block title
  | {{ title }}

block content
  form(
    action='{% url "password_reset" %}'
    method='POST'
    role='form'
  )
    {% csrf_token %}
    {{ form | crispy }}
    button(
      type='submit'
      class='btn btn-outline-primary'
    ) Reset
    a(
      href='{% url "login" %}'
      onclick='window.history.back(); return false'
      class='btn btn-outline-secondary pull-xs-right'
    ) Back
