extends ninetofiver/base/page.pug
- load static

block title
  | API documentation

block styles
  link(
    rel="stylesheet"
    type="text/css"
    href="//unpkg.com/swagger-ui-dist@3/swagger-ui.css"
  )

block body
  div
    div(id='swagger-ui')

block scripts
  script(src="//unpkg.com/swagger-ui-dist@3/swagger-ui-standalone-preset.js")
  script(src="//unpkg.com/swagger-ui-dist@3/swagger-ui-bundle.js")
  script.
    const ui = SwaggerUIBundle({
      url: "{% static "ninetofiver/docs/schemas/api_v2/api_v2.yaml" %}",
      dom_id: '#swagger-ui',
      presets: [
          SwaggerUIBundle.presets.apis,
          SwaggerUIStandalonePreset
      ],
      layout: "StandaloneLayout"
    })