extends ninetofiver/account/page.pug
- load crispy_forms_tags

block title
  | Create an application

block content_main
  form(
    action='{% url "oauth2_provider:register" %}'
    method='POST'
    role='form'
  )
    {% csrf_token %}
    {{ form | crispy }}
    div(class='btn-group')
      button(
        type='submit'
        class='btn btn-primary'
      )
        i(class='fa fa-check')
        | Submit
      a(
        href='{% url "oauth2_provider:list" %}'
        class='btn btn-secondary'
      )
        i(class='fa fa-times')
        | Cancel
