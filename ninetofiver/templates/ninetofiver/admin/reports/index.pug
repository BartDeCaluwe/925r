extends ninetofiver/admin/reports/base.pug


block content
    hr
    table(class="table table-bordered table-striped")
      tbody
        tr
          th
            a(href="{% url 'admin_report_timesheet_contract_overview' %}?year={% now 'Y' %}&month={% now 'n' %}") Timesheet contract overview
        tr
          th
            a(href="{% url 'admin_report_timesheet_overview' %}?year={% now 'Y' %}&month={% now 'n' %}") Timesheet overview
        tr
          th
            a(href="{% url 'admin_report_user_range_info' %}?from_date={% now 'Y-m-d' %}&until_date={% now 'Y-m-d' %}&user={{ user.id }}") User range info
        tr
          th
            a(href="{% url 'admin_report_user_leave_overview' %}?from_date={% now 'Y-m-d' %}&until_date={% now 'Y-m-d' %}&user={{ user.id }}") User leave overview
        tr
          th
            a(href="{% url 'admin_report_user_work_ratio_overview' %}?year={% now 'Y' %}&user={{ user.id }}") User work ratio overview
        tr
          th
            a(href="{% url 'admin_report_resource_availability_overview' %}?user={{ user.id }}&from_date={% now 'Y-m-d' %}&until_date={% now 'Y-m-d' %}") Resource availability overview
        tr
          th
            a(href="{% url 'admin_report_expiring_consultancy_contract_overview' %}") WIP: Expiring consultancy contract overview
        tr
          th
            a(href="{% url 'admin_report_project_contract_overview' %}") WIP: Project contract overview
